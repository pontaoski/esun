<!doctype html>
<html lang="en">

<head>
	<meta charset="utf-8">
	#if(app.environment == "development"):
	<script type="module" src="http://localhost:5173/@vite/client"></script>
	<script type="module" src="http://localhost:5173/Public/app.ts"></script>
	#endif
</head>

<body data-controller="folder">
	<header class="w-full border-b border-black p-1 flex flex-row justify-between items-center">
		<div class="text-sm">
			#if(app.user != nil):
			User: #(app.user.username)
			#else:
			<a href="/auth/login">Log In</a>
			#endif
		</div>
		<div>
			Esun <span class="text-sm">by <span class="font-bold text-[#649832]">Solitude</span> Corporation</span>
		</div>
		<div class="flex flex-row space-x-4">
			#if(count(app.cart.items) != 0):
			<a href="/@cart">
				Shopping Cart
				(#count(app.cart.items))
			</a>
			#endif
			<div data-folder-target="escape">
			</div>
		</div>
	</header>
	<main>
		#import("body")
	</main>
</body>

</html>
